{
  "name": "tl-navigator_v3",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-s build:project-only build:geojson build:cname",
    "build:project-only": "run-p type-check \"build-only {@}\" --",
    "build:geojson": "cp translocators.geojson dist/ && cp landmarks.geojson dist/",
    "build:cname": "echo translocator.moe > dist/CNAME",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "get:tops-translocators": "wget -O translocators.geojson https://map.tops.vintagestory.at/data/geojson/translocators.geojson",
    "get:tops-landmarks": "wget -O landmarks.geojson https://map.tops.vintagestory.at/data/geojson/landmarks.geojson",
    "get:geojsons": "run-p get:tops-translocators get:tops-landmarks"
  },
  "dependencies": {
    "dexie": "^4.0.11",
    "vue": "^3.5.17",
    "vue-multiselect": "^3.2.0"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.15.32",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.29.0",
    "eslint-plugin-oxlint": "~1.1.0",
    "eslint-plugin-vue": "~10.2.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.1.0",
    "prettier": "3.6.2",
    "typescript": "~5.8.0",
    "vite": "^7.0.0",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vue-tsc": "^2.2.10"
  }
}
